<div class="container py-5">
  <h3>Company</h3>
  <div class="row">
    <div class="col">
      <%= link_to "< Companies", companies_path %>
    </div>
    <div class="col text-right">
      <%= link_to "Edit", edit_company_path %>
      <%= link_to 'Delete Company', company_path(@company),
            data: {:confirm => 'Are you sure?'}, :method => :delete %>
    </div>
  </div>
  <div class="bg-success">
    <div class="container p-5 text-white">
      <h1><%= @company.name %></h1>
      <h3>City, State</h3>
      <pre><%= @company.get_city_state%></pre>
    </div>
  </div>
  <% if @company.description.present? %>
    <div class="bg-light p-5">
      <%= @company.description %>
    </div>
  <% end %>
  <div class="bg-success text-white text-center py-3">
    <p class="lead"><%= @company.phone %> — <%= @company.email %></p>
  </div>
</div>
